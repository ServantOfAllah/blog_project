<% include partials/header %>

<div class="container text-center">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to BLOGGER</h1>
            <p>The most amazing blog of all time</p>
            <a href="/posts/new"><button class="btn btn-lg btn-primary">add new post</button></a>
        </div>
    </header>
    
    <div class="row">
        <div class="col-lg-12">
        </div>
    
        <% posts.forEach(function(post){ %>
            <div class="col-md-offset-3 col-md-6">
                <h2 class=""><%= post.title %></h2>
                <h5 class="text-center"><%= post.article %></h5>
                <strong><h5 class="">Author: <%= post.name %></strong>    |   <span class="date"><%= post.created.toDateString() %></span></h5>
                <a href="/posts/<%= post._id %>"><button class="btn btn-primary">view more...</button></a>
                <br />
                <hr/>
            </div>
        <% }) %>
    </div>
</div>

<% include partials/footer %>